دالة ابدأ(المحتوى):
	الشفرة = '<!DOCTYPE html><html lang="ar" dir="rtl"><head><meta charset="UTF-8" /><meta name="viewport" content="width=device-width, initial-scale=1.0" /> <meta name="description" content="" /><meta name="keywords" content="alif,aliflang,alifweb,الف, الف ويب" /><link rel="stylesheet" href="اساسي.css"><link rel="icon" href=""><title></title></head><body><div id="root"></div><script>const __fragment = document.getElementById("root");'
	شفرة_الموقع = الشفرة + المحتوى["الشفرة"]
	شفرة_الموقع +=  "__fragment.appendChild(" + المحتوى["متغير"] + ");"
	شفرة_الموقع += م"document.title = '{عنوان_الصفحة}';"
	شفرة_الموقع += م"document.querySelector('link[rel=\"icon\"]').href  = '{شعار_الصفحة}';"

	شفرة_الموقع += "</script></body></html> "
	اطبع(شفرة_الموقع)
	ارجع شفرة_الموقع
