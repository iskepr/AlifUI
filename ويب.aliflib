
المعرف_الحالي = 0
عنوان_الصفحة = "غير مٌعنون"
شعار_الصفحة = ""

دالة صفحة(المحتوى = {"العنوان": عنوان_الصفحة , "العناصر": []}):
	المعرف = م"صفحة{المعرف_الحالي + 1}"
	الشفرة = "\س" + "const " + المعرف + " = document.createElement('div');"
	الشفرة += "\س" + المعرف + ".className = 'Page'"

	لاجل ب في مدى(طول(المحتوى["العناصر"])):
		الشفرة += "\س" +  المحتوى["العناصر"][ب]["الشفرة"]
		الشفرة += "\س" + المعرف + ".appendChild(" + المحتوى["العناصر"][ب]["متغير"] + ");"

	ارجع { "الشفرة": الشفرة, "متغير": المعرف }

دالة نص(النص = "", المحتوى = {"اللون":"" , "الحجم":"", "السمك":"", "الاسم":""}):
	المعرف = م"نص{المعرف_الحالي + 1}"
	الشفرة = "\س" + "const " + المعرف + " = document.createElement('p');"
	الشفرة += "\س" + المعرف + ".textContent = '" + النص + "';"

	الشفرة += "\س" + المعرف + ".style.color = '" + المحتوى["اللون"] + "';"
	الشفرة += "\س" + المعرف + ".style.fontSize = '" + المحتوى["الحجم"] + "';"
	الشفرة += "\س" + المعرف + ".style.fontWeight = '" + المحتوى["السمك"] + "';"
	الشفرة += "\س" + المعرف + ".style.fontFamily = '" + المحتوى["الاسم"] + "';"

	ارجع { "الشفرة": الشفرة, "متغير": المعرف }

